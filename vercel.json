{\n  "version": 2,\n  "cleanUrls": true,\n  "trailingSlash": false,\n\n  "headers": [\n    {\n      "source": "/(.*)",\n      "headers": [\n        {\n          "key": "X-Content-Type-Options",\n          "value": "nosniff"\n        },\n        {\n          "key": "X-Frame-Options",\n          "value": "DENY"\n        },\n        {\n          "key": "Referrer-Policy",\n          "value": "strict-origin-when-cross-origin"\n        }\n      ]\n    },\n    {\n      "source": "/index.html",\n      "headers": [\n        {\n          "key": "Cache-Control",\n          "value": "public, max-age=3600"\n        }\n      ]\n    }\n  ],\n\n  "redirects": [\n    {\n      "source": "/home",\n      "destination": "/"\n    }\n  ],\n\n  "rewrites": [\n    {\n      "source": "/about",\n      "destination": "/#about"\n    },\n    {\n      "source": "/products",\n      "destination": "/#products"\n    },\n    {\n      "source": "/contact",\n      "destination": "/#contact"\n    },\n    {\n      "source": "/(.*)",\n      "destination": "/index.html"\n    }\n  ]\n}